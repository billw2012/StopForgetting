<UserControl x:Class="StopForgetting.Controls.SimpleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
        <CheckBox VerticalAlignment="Center" Margin="0,0,4,0"></CheckBox>
        <TextBlock Width="235" Text="{Binding Path=What}"></TextBlock>
        <TextBlock Width="150" Text="{Binding Path=When}"></TextBlock>
        <TextBlock Width="200" Text="{Binding Path=Where}"></TextBlock>
    </StackPanel>
</UserControl>
