<UserControl x:Class="StopForgetting.Controls.TaskGroupHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <StackPanel Orientation="Horizontal">
        <TextBlock FontSize="18" FontWeight="Bold" Foreground="DeepSkyBlue" Text="{Binding Path=Name}"></TextBlock>
        <TextBlock FontSize="18" FontWeight="Bold" Foreground="DeepSkyBlue" Text=" - "></TextBlock>
        <TextBlock FontSize="18" FontWeight="Bold" Foreground="DeepSkyBlue" Text="{Binding Path=ItemCount}"></TextBlock>


    </StackPanel>
</UserControl>
